%html
  %head
    %title Job Listing Application
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    =link_to "Sign Up Here", new_user_path, class: 'btn btn-primary',:style => "float: right;"
    =link_to "Log In", new_session_path, class: 'btn btn-primary', :style => "float: right;"
    
    
    #main
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]
      = yield