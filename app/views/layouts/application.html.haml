!!! 5
%html
  %head
    %title Job Listing Application
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    - if current_user
      = link_to "Log out", session_path(:current), :method => :delete, class: 'btn btn-login',:style => "float: right;"
      Logged in as #{current_user.email}
    - else  
      =link_to "Sign Up Here", new_user_path, class: 'btn btn-login',:style => "float: right;"
      =link_to "Log In", new_session_path, class: 'btn btn-login', :style => "float: right;"
    
    
    
    #main
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]
      = yield